<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/product_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"
        android:textColor="@color/black_background"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Name"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="@dimen/list_item_padding"
        android:textColor="@color/black_background"
        android:fontFamily="sans-serif-medium"
        android:layout_toRightOf="@id/product_name_label"
        android:layout_toEndOf="@id/product_name_label"
        tools:text="Concepts of Physics" />

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/layout_top"
        android:textColor="@color/black_background"
        android:layout_below="@id/product_name_label"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/price"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:textColor="@color/black_background"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/layout_top"
        android:layout_toEndOf="@id/price_label"
        android:layout_toRightOf="@id/price_label"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="@string/number_edit" />

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_label"
        android:layout_marginRight="@dimen/list_item_padding"
        android:textColor="@color/black_background"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/layout_top"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/quantity"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/layout_top"
        android:layout_toRightOf="@id/quantity_label"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black_background"
        tools:text="@string/number_edit" />

    <Button
        android:id="@+id/sale_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sale_button_height"
        android:layout_below="@id/quantity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/sale_button_margin_top"
        android:background="@drawable/sale_button_background"
        android:gravity="center"
        android:text="@string/button_sale"
        android:textAppearance="?android:textAppearanceMedium"
        android:focusable="false"/>

</RelativeLayout>